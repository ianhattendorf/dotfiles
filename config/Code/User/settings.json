{
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Fira Code', 'Fira Mono', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.renderSideBySide": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "workbench.colorTheme": "Quiet Light",
    "editor.tabSize": 2,
    "redhat.telemetry.enabled": true,
    "todo-tree.regex.subTagRegex": "^\\((.*)\\)",
    "todo-tree.tree.buttons.groupBySubTag": true,
    "todo-tree.highlights.defaultHighlight": {
        "type": "tag-and-subTag"
    },
    "nrf-connect.topdir": "${nrf-connect.sdk:2.3.0-rc1}",
    "nrf-connect.toolchain.path": "PATH",
    "nrf-connect.enableTelemetry": true,
    "nrf-connect.welcome.showOnStartup": false,
    "devicetree.defaultBoard": "nrf5340dk_nrf5340",
    "mesonbuild.configureOnOpen": true
}